{% extends 'main.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block sub_body %}
<h1 class="text-center">Utilisateur : {{ user.email}}</h1>

<table class="table table-striped">
    <tbody>
        <tr>
            <th>Id</th>
            <td>{{ user.id|raw }}</td>
        </tr>
        <tr>
            <th>Email</th>
            <td>{{ user.email|raw }}</td>
        </tr>
        <tr>
            <th>Roles</th>
            <td>{{ user.roles ? user.roles|json_encode : '' }}</td>
        </tr>
        <tr>
            <th>Nom</th>
            <td>{{ user.lastname|raw }}</td>
        </tr>
        <tr>
            <th>Prénom</th>
            <td>{{ user.firstname|raw }}</td>
        </tr>
        <tr>
            <th>Pseudo</th>
            {% if user.nickname is same as (null) %}
            <td>-</td>
            {% else %}
            <td>{{ user.nickname|raw }}</td>
            {% endif %}

        </tr>
        <tr>
            <th>Date de naissance</th>
            {% if user.dateOfBirth is same as (null) %}
            <td>-</td>
            {% else %}
            <td>{{ user.dateOfbirth ? user.dateOfbirth|date('Y-m-d') : ''  }}</td>
            {% endif %}

        </tr>
        <tr>
            <th>Présentation</th>
            {% if user.presentation is same as (null) %}
            <td>-</td>
            {% else %}
            <td>{{ user.presentation|raw }}</td>
            {% endif %}

        </tr>
        <tr>
            <th>Avatar</th>
            {% if user.avatar is same as (null) %}
            <td>-</td>
            {% else %}
            <td>{{ user.avatar|raw }}</td>
            {% endif %}

        </tr>
    </tbody>
</table>
<div class="d-flex justify-content-around">

    <a href="{{ path('app_user_index') }}" class="btn btn-outline-primary">Retour à la liste des utilsateurs</a>

    <a href="{{ path('app_user_edit', {'id': user.id}) }}" class="btn btn-outline-warning">Modifier</a>

    {{ include('user/_delete_form.html.twig') }}
</div>
{% endblock %}