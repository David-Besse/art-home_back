{% extends 'main.html.twig' %}

{% block title %}Artwork{% endblock %}

{% block sub_body %}
    <h1>Artwork</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artwork.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ artwork.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artwork.description }}</td>
            </tr>
            <tr>
                <th>Picture</th>
                <td>{{ artwork.picture }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ artwork.slug }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ artwork.status ? 'Yes' : 'No' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_artwork_index') }}">back to list</a>

    <a href="{{ path('app_artwork_edit', {'id': artwork.id}) }}">edit</a>

    {{ include('artwork/_delete_form.html.twig') }}
{% endblock %}
