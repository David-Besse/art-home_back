{% extends 'main.html.twig' %}

{% block title %}Oeuvres{% endblock %}

{% block sub_body %}
    <h1>Oeuvre</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ artwork.id }}</td>
            </tr>
            <tr>
                <th>Titre</th>
                <td>{{ artwork.title }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ artwork.description }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ artwork.picture }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ artwork.status ? 'Validé' : 'Non Validé' }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_artwork_index') }}" class="btn btn-primary">Retour à la liste des oeuvres</a>

    <a href="{{ path('app_artwork_edit', {'id': artwork.id}) }}" class="btn btn-warning">Modifier</a>

    {{ include('artwork/_delete_form.html.twig') }}
{% endblock %}
