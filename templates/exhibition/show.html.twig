{% extends 'base.html.twig' %}

{% block title %}Exhibition{% endblock %}

{% block body %}
    <h1>Exhibition</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ exhibition.id }}</td>
            </tr>
            <tr>
                <th>Title</th>
                <td>{{ exhibition.title }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ exhibition.slug }}</td>
            </tr>
            <tr>
                <th>StartDate</th>
                <td>{{ exhibition.startDate ? exhibition.startDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>EndDate</th>
                <td>{{ exhibition.endDate ? exhibition.endDate|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ exhibition.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ exhibition.description }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_exhibition_index') }}">back to list</a>

    <a href="{{ path('app_exhibition_edit', {'id': exhibition.id}) }}">edit</a>

    {{ include('exhibition/_delete_form.html.twig') }}
{% endblock %}
